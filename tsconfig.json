{
  "compilerOptions": {
    "target": "ES2020",                          // Modern JavaScript features
    "module": "commonjs",                        // CommonJS module system (used by Node.js)
    "strict": true,                              // Enable all strict type-checking options
    "esModuleInterop": true,                     // Allow default imports from CommonJS modules
    "skipLibCheck": true,                        // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,    // Ensure file name case consistency
    "outDir": "./dist/ts"                        // Output directory for compiled JavaScript
  },
  "include": ["lambdas/**/*", "layers/**/*", "shared/**/*", "tests/**/*"], // Files to be included
  "exclude": ["node_modules", "dist"]            // Exclude unnecessary directories
}
